<Window x:Class="POPD_WPF.WindowRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:POPD_WPF"
        mc:Ignorable="d"
        Height="500" Width="700" AllowsTransparency="True" Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterScreen" >
    <Border Background="White" CornerRadius="20">
        <Grid>
            <Grid VerticalAlignment="Top" Background="Transparent" Height="40" MouseDown="Grid_MouseDown">
                <Border Background="LightGray" CornerRadius="20 20 0 0"/>
                
                <TextBlock Text="Регистрация/Авторизация" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="40 0 0 0" FontSize="20" FontWeight="Bold" x:Name="TBTitle"/>
                <Button VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFloatingActionButton}" Height="25" Width="25" Background="Gray" BorderBrush="Gray" x:Name="ButtonBack" Margin="10 0 0 0" Click="ButtonBack_Click">
                    <StackPanel>
                        <md:PackIcon Kind="ArrowBack"/>
                    </StackPanel>
                </Button>
                <Button VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource MaterialDesignFloatingActionButton}" Height="25" Width="25" Margin="0 0 10 0" Background="Red" BorderBrush="Red" x:Name="ButtonClose" Click="ButtonClose_Click">
                    <StackPanel>
                        <md:PackIcon Kind="WindowClose"/>
                    </StackPanel>
                </Button>
                <Button VerticalAlignment="Center" HorizontalAlignment="Right" Style="{StaticResource MaterialDesignFloatingActionButton}" Height="25" Width="25" Margin="0 0 40 0" Background="Lime" BorderBrush="Lime" x:Name="ButtonMinimize" Click="ButtonMinimize_Click">
                    <StackPanel>
                        <md:PackIcon Kind="WindowMinimize"/>
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Margin="0 40 0 0">
                <Frame x:Name="FrameRegAft" NavigationUIVisibility="Hidden"/>
            </Grid>
        </Grid>
    </Border>
</Window>
